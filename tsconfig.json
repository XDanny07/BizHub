{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/(tabs)/_layout.jsx",
    "app/index.tsx",
    "app/_layout.jsx",
    "app/(tabs)/home.jsx",
    "app/(tabs)/profile.jsx",
    "components/LoginScreen.jsx",
    "app/(tabs)/explore.jsx"
  ]
}
